{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f4f4d5",
  "width": 500,
  "height": 400,
  "title": {
    "text": "Share of Global Food Emissions",
    "color": "#333d29",
    "fontSize": 20
    },
  "data": {
    "url": "https://raw.githubusercontent.com/LesinTeohMonash/Data-Visualization-2/main/datasets/share-global-food-emissions.csv"
  },
  "params": [
    {
      "name": "Continent_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Show Default",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "Show default",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    },

    {
      "name": "Entity_Selection",
      "select": {"type": "point", "fields": ["Entity"]},
      "bind": "legend"
    }
  ],
  "transform": [
    {"calculate": "datum.Share * 1", "as": "_Share"},

    {
      "window": [{"op": "count", "as": "_sum"}],
      "sort": [
        {"field": "_sum", "order": "descending"}
      ]
    },

    {
      "filter": "Continent_Selection == null || datum['continent'] == Continent_Selection"
    }

  ],
  "mark": "line",
  "encoding": {
    "x": {"field": "Year", "type": "quantitative"},
    "y": {
      "field": "Share", 
      "type": "quantitative"
    },
    "color": {"field": "Entity", "type": "nominal"},
    "opacity": {
      "condition": {"param": "Entity_Selection", "value": 0.9},
      "value": 0.1
    },
    "tooltip": [
      {"field": "continent", "type": "nominal"},
      {"field": "Entity", "type": "nominal"},
      {"field": "Share", "type": "quantitative"}
    ]
  }
}