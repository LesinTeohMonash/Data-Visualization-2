{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#ffe8d6",
    "title": {
        "text": "Emission to the Environment from Different Type of Food",
        "color": "#432818",
        "fontSize": 20
        },
    "data": {
      "url": "https://raw.githubusercontent.com/LesinTeohMonash/Data-Visualization-2/main/datasets/emissions-per-kg-food.csv"
    },
    "params": [
      {
        "name": "Food_Selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Apples",
            "Bananas",
            "Barley",
            "Beef (beef herd)",
            "Beef (dairy herd)",
            "Beet Sugar",
            "Berries & Grapes",
            "Brassicas",
            "Cane Sugar",
            "Cassava",
            "Cheese",
            "Citrus Fruit",
            "Coffee",
            "Dark Chocolate",
            "Eggs",
            "Fish (farmed)",
            "Groundnuts",
            "Lamb & Mutton",
            "Maize",
            "Milk",
            "Nuts",
            "Oatmeal",
            "Onions & Leeks",
            "Other Fruit",
            "Other Pulses",
            "Other Vegetables",
            "Peas",
            "Pig Meat",
            "Potatoes",
            "Poultry Meat",
            "Prawns (farmed)",
            "Rice",
            "Root Vegetables",
            "Soy milk",
            "Tofu",
            "Tomatoes",
            "Wheat & Rye",
            "Wine"
          ],
          "labels": [
            "Show First 10 Bars",
            "Apples",
            "Bananas",
            "Barley",
            "Beef (beef herd)",
            "Beef (dairy herd)",
            "Beet Sugar",
            "Berries & Grapes",
            "Brassicas",
            "Cane Sugar",
            "Cassava",
            "Cheese",
            "Citrus Fruit",
            "Coffee",
            "Dark Chocolate",
            "Eggs",
            "Fish (farmed)",
            "Groundnuts",
            "Lamb & Mutton",
            "Maize",
            "Milk",
            "Nuts",
            "Oatmeal",
            "Onions & Leeks",
            "Other Fruit",
            "Other Pulses",
            "Other Vegetables",
            "Peas",
            "Pig Meat",
            "Potatoes",
            "Poultry Meat",
            "Prawns (farmed)",
            "Rice",
            "Root Vegetables",
            "Soy milk",
            "Tofu",
            "Tomatoes",
            "Wheat & Rye",
            "Wine"
          ],
          "name": "Food Selection :"
        }
      }
    ],
  
    "transform": [
      {"filter": "Food_Selection == null || datum['Food'] == Food_Selection"},
      {"window": [{"op": "count", "as": "count"}]},
      {"filter": "datum.count <= 10"}
    ],
    "hconcat":[
      {
        "encoding": {
          "x": {
            "field": "Eutrophying emissions per kilogram (Poore & Nemecek, 2018)",
            "type": "quantitative",
            "title": "Eutrophying Emission to the Environment (g)"
          },
  
          "y": {
            "field": "Food", 
            "type": "nominal",
            "sort": {
              "op": "sum",
              "field": "Eutrophying emissions per kilogram (Poore & Nemecek, 2018)",
              "order": "descending"
            }
          },
          "tooltip": [
            {"field": "Food", "type": "nominal"},
            {
              "field": "Eutrophying emissions per kilogram (Poore & Nemecek, 2018)",
              "type": "quantitative",
              "title": "Eutrophying Emission (g)"
            },
            {"field": "Eutrophying %", "type": "quantitative"}
          ]
        },
  
        "layer":[
          {"mark": {"type": "bar", "size" : 1, "color": "#432818"}},
          {"mark": {"type": "circle", "color": "#432818"}},
          {
            "mark": {"type": "text", "align": "left", "fontSize": 10},
            
            "encoding": {
              "text": {
                "field": "Eutrophying emissions per kilogram (Poore & Nemecek, 2018)"
              },
              
              "opacity": {
                "condition": {
                  "test": "datum['Eutrophying emissions per kilogram (Poore & Nemecek, 2018)'] > 50",
                  "value": 0.7
                },
  
                "value": 0
              }
            }
      }
        ]
      },
  
      {
        "encoding": {
          "x": {
            "field": "GHG emissions per kilogram (Poore & Nemecek, 2018)",
            "type": "quantitative",
            "title": "GHG Emission to the Environment"
          },
          "y": {
            "field": "Food", 
            "type": "nominal",
            "sort": {
              "op": "sum",
              "field": "GHG emissions per kilogram (Poore & Nemecek, 2018)",
              "order": "descending"
            },
            "title": ""
          },
          "tooltip": [
            {"field": "Food", "type": "nominal"},
            {
              "field": "GHG emissions per kilogram (Poore & Nemecek, 2018)",
              "type": "quantitative",
              "title": "GHG Emission (kg)"
            }
          ]
        },
        "layer": [
          {"mark": {"type": "bar", "size" : 1, "color": "#432818"}},
          {"mark": {"type": "circle", "color": "#432818"}},
          {
            "mark": {"type": "text", "align": "left", "fontSize": 10},
            "encoding": {
              "text": {"field": "GHG emissions per kilogram (Poore & Nemecek, 2018)"},
              "opacity": {
                "condition": {
                  "test": "datum['GHG emissions per kilogram (Poore & Nemecek, 2018)'] > 50",
                  "value": 0.7
                },
                "value": 0
              }
            }
          }
        ]
      },
  
      {
        "encoding": {
          "x": {
            "field": "Land use per kilogram (Poore & Nemecek, 2018)",
            "type": "quantitative",
            "title": "Land used by Food"
          },
          "y": {
            "field": "Food", 
            "type": "nominal",
            "sort": {
              "op": "sum",
              "field": "Land use per kilogram (Poore & Nemecek, 2018)",
              "order": "descending"
            },
            "title": ""
          },
          "tooltip": [
            {"field": "Food", "type": "nominal"},
            {
              "field": "Land use per kilogram (Poore & Nemecek, 2018)",
              "type": "quantitative",
              "title": "Land used (m2)"
            }
          ]
        },
        "layer": [
          {"mark": {"type": "bar", "size" : 1, "color": "#432818"}},
          {"mark": {"type": "circle", "color": "#432818"}},
          {
            "mark": {"type": "text", "align": "left", "fontSize": 10},
            "encoding": {
              "text": {"field": "Land use per kilogram (Poore & Nemecek, 2018)"},
              "opacity": {
                "condition": {
                  "test": "datum['Land use per kilogram (Poore & Nemecek, 2018)'] > 50",
                  "value": 0.7
                },
                "value": 0
              }
            }
          }
        ]
      },
  
      {
        "encoding": {
          "x": {
            "field": "Freshwater withdrawals per kilogram (Poore & Nemecek, 2018)",
            "type": "quantitative",
            "title": "Water used by Food"
          },
          "y": {
            "field": "Food", 
            "type": "nominal",
            "sort": {
              "op": "sum",
              "field": "Freshwater withdrawals per kilogram (Poore & Nemecek, 2018)",
              "order": "descending"
            },
            "title": ""
          },
          "tooltip": [
            {"field": "Food", "type": "nominal"},
            {
              "field": "Freshwater withdrawals per kilogram (Poore & Nemecek, 2018)",
              "type": "quantitative",
              "title": "Water used (L)"
            }
          ]
        },
        "layer": [
          {"mark": {"type": "bar", "size" : 1, "color": "#432818"}},
          {"mark": {"type": "circle", "color": "#432818"}},
          {
            "mark": {"type": "text", "align": "left", "fontSize": 10},
            "encoding": {
              "text": {
                "field": "Freshwater withdrawals per kilogram (Poore & Nemecek, 2018)"
              },
              "opacity": {
                "condition": {
                  "test": "datum['Freshwater withdrawals per kilogram (Poore & Nemecek, 2018)'] > 50",
                  "value": 0.7
                },
                "value": 0
              }
            }
          }
        ]
      }
    ]
  }