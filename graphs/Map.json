{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Food Emission Produced by each Country",
    "color": "#333d29",
    "fontSize": 20
    },
  "width": 800,
  "height": 500,
  "background": "#f4f4d5",
  "data": {
        "url": "https://raw.githubusercontent.com/LesinTeohMonash/Data-Visualization-2/main/mapshaper-file/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "Continent_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],

  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available'",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#edf6fa"}
    },
    
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LesinTeohMonash/Data-Visualization-2/main/mapshaper-file/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#333d29"}
    },

    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
        "url": "https://raw.githubusercontent.com/LesinTeohMonash/Data-Visualization-2/main/datasets/share-global-food-emissions.csv"
            },
            "key": "Entity",
            "fields": ["Share"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Share",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 3, 5, 7, 9, 11, 13],
            "range": [
              "#ede0d4",
              "#ddb892",
              "#c6ac8f",
              "#a68a64",
              "#936639",
              "#7f4f24",
              "#432818",
              "#0a100d"
            ]
          },
          "legend": {
            "labelColor": "#333d29",
            "titleColor": "#333d29"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME_LONG",
            "type": "nominal",
            "title": "Country Name"
          },
          {"field": "Share", "type": "quantitative"}
        ]
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/LesinTeohMonash/Data-Visualization-2/main/datasets/share-global-food-emissions.csv"
      },

      "transform": [
        {
          "filter": "Continent_Selection == null || datum['continent'] == Continent_Selection"
        }
      ],

      "mark": {"type": "circle", "color": "#d19c1d"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "Share",
          "type": "quantitative",
          "title": "Share",
          "scale": {"domain": [0, 15]}
        },
        "color": {
          "legend": {
            "labelColor": "#333d29",
            "titleColor": "#333d29"
          }
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country Name"},
          {"field": "Share", "type": "quantitative"}
        ]
      }
    }
  ]
}