{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#ffe8d6",
    "title": {
      "text": "Emission to the Environment from each type of Milk",
      "color": "#432818",
      "fontSize": 20
      },
    "data": {
      "url": "https://raw.githubusercontent.com/LesinTeohMonash/Data-Visualization-2/main/datasets/dairy-plant-base.csv"
    },
  
    "params": [
      {
        "name": "Milk Filter",
        "select": {"type": "point", "fields": ["Type of Milk"]},
        "bind": "legend"
      }
    ],
  
    "hconcat": [
      
      {
        "title": {
          "text": "Eutrofying Emission by each type of milk", 
          "color": "#432818"
        },
        "mark": "arc",
        "encoding": {
          "theta": {
            "field": "Eutrophication from milks (g PO43-eq)",
            "type": "quantitative"
          },
          "color": {
            "field": "Type of Milk",
            "type": "nominal",
            "legend": {
              "titleColor": "#432818",
              "labelColor": "#432818"
            },
            "scale": {
              "domain": [
                "Almond milk",
                "Dairy milk",
                "Oat milk",
                "Rice milk",
                "Soy milk"
              ],
              "range": [
                "#774936",
                "#8a5a44",
                "#9d6b53",
                "#b07d62",
                "#c38e70"
              ]
            }
          },
          "opacity": {
            "condition": {"param": "Milk Filter", "value": 0.9},
            "value": 0.4
          },
          "tooltip": [
            {"field": "Type of Milk", "type": "nominal"},
            {
              "field": "Eutrophication from milks (g PO43-eq)",
              "type": "quantitative",
              "title": "Eutrophication (g)"
            },
            {"field": "Eutrophication %", "type": "quantitative"}
          ]
        }
      },
  
      {
        "title": {
          "text": "GHG Emission by each type of milk", 
          "color": "#432818"
        },
        "mark": "arc",
        "encoding": {
          "theta": {
            "field": "GHG emissions of milks (kg CO2eq)",
            "type": "quantitative"
          },
          "color": {
            "field": "Type of Milk", 
            "type": "nominal"
          },
          "opacity": {
            "condition": {"param": "Milk Filter", "value": 0.9},
            "value": 0.4
          },
          "tooltip": [
            {"field": "Type of Milk", "type": "nominal"},
            {"field": "GHG emissions of milks (kg CO2eq)", "type": "quantitative", "title": "GHG Emissions (kg)"},
            {"field": "GHG %", "type": "quantitative"}
          ]
        }
      },
  
      {
        "title": {
          "text": "Land Used by each type of milk", 
          "color": "#432818"
        },
        "mark": "arc",
        "encoding": {
          "theta": {"field": "Land use of milks (m2)", "type": "quantitative"},
          "color": {
            "field": "Type of Milk", 
            "type": "nominal"
          },
          "opacity": {
            "condition": {"param": "Milk Filter", "value": 0.9},
            "value" : 0.4
          },
          "tooltip": [
            {"field": "Type of Milk", "type": "nominal"},
            {"field": "Land use of milks (m2)", "type": "quantitative", "title": "Land Used (m2)"},
            {"field": "Land %", "type": "quantitative"}
          ]
        }
      },
  
      {
        "title": {
          "text": "Water Used by each type of milk", 
          "color": "#432818"
        },
        "mark": "arc",
        "encoding": {
          "theta": {"field": "Water use of milks (L)", "type": "quantitative"},
          "color": {
            "field": "Type of Milk", 
            "type": "nominal",
            "legend": {
              "labelColor": "#3a5a40",
              "titleColor": "#3a5a40"
            }
          },
          "opacity": {
            "condition": {"param": "Milk Filter", "value": 0.9},
            "value": 0.4
          },
          "tooltip": [
            {"field": "Type of Milk", "type": "nominal"},
            {"field": "Water use of milks (L)", "type": "quantitative", "title": "Water (L)"},
            {"field": "Water %", "type": "quantitative"}
          ]
        }
      }
    ]
  }